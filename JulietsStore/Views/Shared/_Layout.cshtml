<!DOCTYPE html>

<html lang="ru-ru">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <title>@ViewData["Title"] - JulietsStore</title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/JulietsStore.styles.css" rel="stylesheet" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", false)

    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" type="image/png" href="~/favicon.png" sizes="500x500">
    
    <base href="~/" />
</head>

<body>

<header>
    <partial name="Partial/_TopbarPartial" />

    <div class="container-fluid mb-5">
        <div class="row border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <partial name="Partial/_LeftSidebarPartial"/>
            </div>
            <div class="col-lg-9">

                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">Juliets</span>Shop.ru</h1>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between">
                        <partial name="Partial/_MainMenuPartial"/>

                        <div class="navbar-nav ml-auto py-0">
                            <a href="" class="nav-item nav-link">Вход</a>
                            <a href="" class="nav-item nav-link">Регистрация</a>
                        </div>
                    </div>
                </nav>

                @RenderBody()

            </div>
        </div>
    </div>
</header>

<partial name="Partial/_FooterPartial" />

<!-- Back to top button -->
<button type="button"
        class="btn btn-primary btn-floating btn-lg back-to-top">
    <i class="fas fa-arrow-up"></i>
</button>

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/js/main.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>

</html>
